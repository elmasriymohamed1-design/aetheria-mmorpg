{
  "name": "aetheria-mmorpg",
  "version": "1.0.0",
  "description": "أساطير أثيريا - صراع الصعود | لعبة متصفح MMORPG متعددة اللاعبين",
  "main": "server/index.js",
  "scripts": {
    "start": "node server/index.js",
    "dev": "nodemon server/index.js",
    "client": "npx live-server client --port=3000 --host=localhost --no-browser",
    "dev:all": "concurrently --kill-others-on-fail \"npm run dev\" \"npm run client\"",
    "dev:server": "nodemon server/index.js",
    "dev:client": "live-server client --port=3000",
    "test": "echo \"Error: no test specified\" && exit 1",
    "reset": "rm -rf node_modules && npm install",
    "lint": "eslint server/**.js",
    "setup": "npm install && echo '✅ تم إعداد المشروع بنجاح! تشغيل npm start لبدء الخادم'"
  },
  "keywords": [
    "mmorpg",
    "browser-game",
    "multiplayer",
    "game",
    "socket.io",
    "html5",
    "canvas",
    "javascript",
    "arabic-game"
  ],
  "author": "فريق أثيريا",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/aetheria-mmorpg.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/aetheria-mmorpg/issues"
  },
  "homepage": "https://github.com/your-username/aetheria-mmorpg#readme",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=7.0.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.7.2",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "concurrently": "^8.2.2",
    "live-server": "^1.2.2",
    "eslint": "^8.56.0"
  },
  "optionalDependencies": {
    "bufferutil": "^4.0.8",
    "utf-8-validate": "^6.0.3"
  }
}